<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
        <!--<item name="android:itemBackground">@color/selector_item_toolbar</item>-->

        <item name="actionOverflowMenuStyle">@style/MyActionOverflowMenuStyle</item>
        <item name="android:itemTextAppearance">@style/OverflowItemText</item>

        <item name="android:dropDownListViewStyle">@style/AppDropDownListViewStyle</item>
    </style>


    <style name="MyOverflowButtonStyle">
        <item name="android:src">@mipmap/actionbar_add_icon</item>
    </style>


    <style name="MyActionOverflowMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--设置overflow中的文字的相关属性 -->
    <style name="OverflowItemText" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?attr/textAppearanceSmallPopupMenu</item>
    </style>

    <style name="AppDropDownListViewStyle" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#888888</item>
        <item name="android:dividerHeight">2px</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
